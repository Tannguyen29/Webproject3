{% extends 'base.html.twig' %}

{% block title %}Hello FeedbackController!{% endblock %}

{% block body %}
<div class="container col-md-8 text-center mt-3">
<table class="table table-light">
    <tr>
        <th colspan="3">
            <h1 class="text text-primary">Student List</h1>
        </th>
        <th>
            <a class="text-decoration-none" href="{{ path('app_register') }}">
                <img src="{{ asset('image/button/add3.png') }}" width="40" height="40">
            </a>
        </th>
    </tr>
    <tr>
        <th class="text text-success">id</th>
        <th class="text text-success">Teacher name</th>
        <th class="text text-success">Class Name</th>
        <th class="text text-success">Actions</th>
{% for report in feedback %}
    <tr>
        <td>{{ report.id }}</td>
        <td>{{ report.teachername }}</td>
        <td>{{ report.classname }}</td>
        <td>
                <a class="text-decoration-none" href="{{ path('feedback_detail', {'id' : report.id }) }}">
                    <img src="{{ asset('image/button/detail.png') }}" width="40" height="40">
                </a>

                <a class="text-decoration-none" href="{{ path('feedback_delete', {'id' : report.id }) }}"
                onclick="return confirm('Are you sure to delete this feedback ?');"
                >
                    <img src="{{ asset('image/button/delete.png') }}" width="40" height="40">
                </a>
            </td>

    </tr>
{% endfor %}
{% endblock %}
